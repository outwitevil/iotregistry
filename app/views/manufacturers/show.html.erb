<%- model_class = Manufacturer -%>
<div class="page-header">
  <h1><%=t '.title', :default => Manufacturer %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @manufacturer.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:base_url) %></dt>
      <dd><pre class="prettyprint"><%= @manufacturer.base_url %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              manufacturers_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manufacturer_path(@manufacturer), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manufacturer_path(@manufacturer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

