<%- model_class = MyIOTDevice -%>
<div class="page-header">
  <h1><%=t '.title', :default => MyIOTDevice %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:ipv4_address) %></th>
      <th><%= model_class.human_attribute_name(:installed_firmware_version) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @my_iot_devices.each do |my_iot_device| %>
      <tr>
        <td><%= my_iot_device.id %></td>
        <td><%= my_iot_device.ipv4_address %></td>
        <td><%= my_iot_device.installed_firmware_version %></td>
        <td><%=l my_iot_device.created_at, format: :long %></td>
        <td>
          <%= link_to my_iot_device_path(my_iot_device), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to my_iot_device_path(my_iot_device), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_my_iot_device_path,
            :class => 'btn btn-primary' %>
