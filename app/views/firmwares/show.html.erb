<%- model_class = Firmware -%>
<div class="page-header">
  <h1><%=t '.title', :default => Firmware %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:download_url) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.download_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:version) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.version %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:name) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.name %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:readme_url) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.readme_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:readme_title) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.readme_title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:readme_description) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.readme_description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:enabled) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.enabled %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:requirements) %></dt>
      <dd><pre class="prettyprint"><%= @firmware.requirements %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              firmwares_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_firmware_path(@firmware), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              firmware_path(@firmware),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

